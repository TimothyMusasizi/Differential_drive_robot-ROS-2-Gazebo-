<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="differential_drive_robot">
    

    <xacro:property  name="pi_const" value="3.14159265"/>

    <!-- Body Dimensions -->
    <xacro:property name="a" value="1"/>
    <xacro:property name="b" value="0.3"/>
    <xacro:property name="c" value="0.6"/>

    <!-- Wheel and Caster dimensions -->
    <!-- Wheel and Caster radius -->

    <xacro:property name="r" value="0.15"/>

    <!-- Wheel width -->
    <xacro:property name="d" value="0.1" />

    <xacro:property name="s1" value="${b/2+r}" />
    <xacro:property name="s2" value="${2*r}" />
    <xacro:property name="s3" value="${2*r}" />
    <xacro:property name="s4" value="${c/2+d/2}" />


    <!-- Mass and Inertia Properties -->
    <!-- Body Material density -->
    <xacro:property name="d1" value="2710.0" />
    <xacro:property name="d2" value="2710.0" />
    <xacro:property name="d3" value="2710.0" />

    <!-- Body mass, wheel mass and caster mass -->
    <!-- Body -->
    <xacro:property name="m1" value="${d1*a*b*c}" />
    <!-- Wheel -->
    <xacro:property name="m2" value="${d2*pi_const*r*r*d}" />
    <!-- Caster -->
    <xacro:property name="m3" value="${d3*(4.0/3.0)*pi_const*r*r*r}" />

    <!-- Moments of Inertia of the robot -->
    <xacro:property name="Ix_body" value="${(1.0/12.0)*m1*(b*b + c*c)}" />
    <xacro:property name="Iy_body" value="${(1.0/12.0)*m1*(a*a + c*c)}" />
    <xacro:property name="Iz_body" value="${(1.0/12.0)*m1*(a*a + b*b)}" />

    <!-- Wheel inertias (solid cylinder): axial (about wheel axis) and radial -->
    <xacro:property name="Iz_wheel" value="${0.5*m2*r*r}" />
    <!-- <xacro:property name="I_wheel" value="${(1/12)*m2*(3*r*r + d*d)}" /> -->
    <xacro:property name="I_wheel" value="${(1.0/12.0)*m2*(3.0*r*r + d*d)}" />


    <!-- Caster moment of inertia -->
    <xacro:property name="I_caster" value="${(2.0/5.0)*m3*r*r}" />



    <!-- This Macro defines the complete inertial section of the robot body -->
    <!-- It is used later in the code -->
    <xacro:macro name="inertia_body">
        <inertial>
            <!-- Displacement and orientation of the center of mass frame of the link with respect to the parent frame-->
            <origin xyz="0.0 0.0 ${s1}" rpy="0.0 0.0 0.0"/>
            <mass value="${m1}"/>
            <inertia ixx="${Ix_body}" ixy="0.0" ixz="0.0" iyy="${Iy_body}" iyz="0.0" izz="${Iz_body}"/>
        </inertial>
    </xacro:macro>


    <!-- This Macro defines the complete inertial section of the wheel -->
    <!-- It is used later in the code -->
    <xacro:macro name="inertia_wheel">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="1.570795 0.0 0.0"/>
            <mass value="${m2}"/>
            <inertia ixx="${I_wheel}" ixy="0.0" ixz="0.0" iyy="${I_wheel}" iyz="0.0" izz="${Iz_wheel}"/>
        </inertial>
    </xacro:macro>

    <!-- This Macro defines the complete inertial section of the caster -->
    <!-- It is used later in the code -->
    <xacro:macro name="inertia_caster">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="${m3}"/>
            <inertia ixx="${I_caster}" ixy="0.0" ixz="0.0" iyy="${I_caster}" iyz="0.0" izz="${I_caster}"/>
        </inertial>
    </xacro:macro>


    <!-- ################################################################################## -->
    
    <!-- ############################ Include Additional Files ############################ -->

    <!-- ################################################################################## -->


    <!-- Here we include the file that defines extra Gazebo options and motion control driver -->

    <xacro:include filename="$(find mobile_robot)/model/robot.gazebo" />



    <!-- ################################################################################## -->

    <!-- AND NOW WE CAN DEFINE THE LINKS AND JOINTS -->

    <!-- ################################################################################## -->


    <!-- START: Ficticious link of the robot -->
    <!-- Also a joint to connect this link to the body_link -->

    <link name="base_footprint"> </link>
    <joint name="body_link_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="body_link"/>
    </joint>
    

    <!-- The body link of the robot -->
    <link name="body_link">
        <visual>
            <geometry>
                <box size="${a} ${c} ${b}"/>
            </geometry>
            <origin xyz="0.0 0.0 ${s1}" rpy="0.0 0.0 0.0"/>
        </visual>

        <collision>
            <geometry>
                <box size="${a} ${c} ${b}"/>
            </geometry>
            <origin xyz="0.0 0.0 ${s1}" rpy="0.0 0.0 0.0"/>
        </collision>

        <xacro:inertia_body/>
    </link>

    <!-- Now the joint between the body and wheel_1_link -->

    <joint name="wheel1_joint" type="continuous">
        <parent link="body_link"/>
        <child link="wheel1_link"/>
        <origin xyz="${-s2} ${-s4} ${r}" rpy="0.0 0.0 0.0"/>
        <axis xyz="0.0 1 0.0"/>
        <limit effort="50000" velocity="10"/>
        <dynamics damping="1.0" friction="1.0"/>
    </joint>

    <!-- And now wheel1_link -->
    <link name="wheel1_link">
        <visual>
            <geometry>
                <cylinder radius="${r}" length="${d}"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="1.570795 0.0 0.0"/>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="${r}" length="${d}"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="1.570795 0.0 0.0"/>
        </collision>

        <xacro:inertia_wheel/>
    </link>

    <!-- Next the Joint for the other wheel -->
    <joint name="wheel2_joint" type="continuous">
        <parent link="body_link"/>
        <child link="wheel2_link"/>
        <origin xyz="${-s2} ${s4} ${r}" rpy="0.0 0.0 0.0"/>
        <axis xyz="0.0 1 0.0"/>
        <limit effort="50000" velocity="10"/>
        <dynamics damping="1.0" friction="1.0"/>
    </joint>

    <!-- And now the wheel2_link definition -->

    <link name="wheel2_link">
        <visual>
            <geometry>
                <cylinder radius="${r}" length="${d}"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="1.570795 0.0 0.0"/>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="${r}" length="${d}"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="1.570795 0.0 0.0"/>
        </collision>

        <xacro:inertia_caster/>
    </link>

    <!-- And then the caster wheel Joint -->
    <joint name="caster_wheel_joint" type="fixed">
        <parent link="body_link"/>
        <child link="caster_link"/>
        <origin xyz="${s3} 0.0 ${r}" rpy="0.0 0.0 0.0"/>
    </joint>

    <!-- And the caster link -->
    <link name="caster_link">
        <visual>
            <geometry>
                <sphere radius="${r}"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </visual>

        <collision>
            <geometry>
                <sphere radius="${r}"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </collision>

        <xacro:inertia_caster/>
    </link>

</robot>
    
